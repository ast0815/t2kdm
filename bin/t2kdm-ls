#!/usr/bin/env python

from six import print_
import argparse
import sys
from t2kdm import ls

parser = argparse.ArgumentParser(description='List contents of a logical path.')
parser.add_argument('path', type=str,
                    help="the logical path, e.g. '/nd280'")
parser.add_argument('-l', '--long', action='store_true',
                    help='longer, more detailed output')

args = parser.parse_args()

for line in ls(args.path, long=args.long, _iter=True):
    print_(line, end='')
